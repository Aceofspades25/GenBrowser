<Window x:Class="CleanString"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="CleanString" Height="300" Width="700">
    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Sequence:" VerticalAlignment="Top" />
        <TextBox x:Name="tbxString" Grid.Row="0" Grid.Column="1" TextWrapping="Wrap" Text="" AcceptsReturn="True" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Auto" />
        <WrapPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom">
        <Button x:Name="btnClean"  Content="Clean" Width="100" />
        <Button x:Name="btnScan" Content="Scan" Width="100" Margin="10,0,0,0" />
        </WrapPanel>
    </Grid>
</Window>
